#
# ~/.aliases
#
# Contains Aliases for BASH or ZSH

echo "Hello $USER"

# Establish Alias
alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias dow='cd ~/Downloads'
alias doc='cd ~/Documents'
alias sudo='sudo '
alias nano='nano --rcfile ~/.config/nano/nanorc' # Nano Profile for Sudo
alias tobash="chsh -s /bin/bash"
alias tozsh="chsh -s /bin/zsh"
